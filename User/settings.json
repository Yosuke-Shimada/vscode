{
    "workbench.colorTheme": "Peacocks In Space (rainglow)",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.enablePreview": false,
    "window.zoomLevel": 0,
    // エクスプローラ
    "explorer.confirmDragAndDrop": false, // D&D 時の確認
    "explorer.confirmDelete": false, // 削除時の確認
    // ファイル全般
    "files.autoSave": "afterDelay",
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true, // 末尾の空白除去
    // エディタ
    "editor.fontFamily": "Ricty Diminished, 'Courier New', monospace",
    "editor.renderWhitespace": "all", // 空白の表示
    "editor.formatOnType": true,
    "editor.formatOnSave": true, // 保存時のフォーマッタ適用
    // エディタ ファイル別
    "[json]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "keep"
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "none"
    },
    "[php]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[sh]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[html]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    // php
    "php.validate.executablePath": "C:/php/php.exe",
    "php.executablePath": "C:/php/php.exe",
    // 拡張子の関連付け
    "files.associations": {
        "*.blade.php": "html", // bladeファイルを開いたときに右下にHTMLと表示されていればOK
        "*.twig": "html"
    },
    // gitignore 対象ファイルを検索対象とするか否か、基本 true が便利だがライブラリの中除きたいときには false の方が都合が良い
    "search.useIgnoreFiles": false,
    // ---------------- extension
    // fullpath in status bar
    // 開いているフォルダを基点とした相対パス / trueで絶対パス
    "ActiveFileInStatusBar.fullpath": false,
    // background-image
    "background.enabled": true,
    "background.useDefault": false,
    "background.customImages": [
        "file:///C:/Users/userName/Pictures/ham1.png",
        "file:///C:/Users/userName/Pictures/ham2.png",
        "file:///C:/Users/userName/Pictures/ham3.png"
    ],
    "background.style": {
        "content": "''",
        "pointer-events": "none",
        "position": "absolute",
        "z-index": "99999",
        "width": "100%",
        "height": "100%",
        "background-position": "100% 100%",
        "background-repeat": "no-repeat",
        "background-size": "50%",
        "opacity": 0.3
    },
    // prettier
    "prettier.endOfLine": "lf",
}