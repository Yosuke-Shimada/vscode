{
    "workbench.colorTheme": "Peacocks In Space (rainglow)",
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.enablePreview": false,
    "window.zoomLevel": 0,
    "git.path": "C:/msys64/usr/bin/git.exe",
    "markdown.styles": [
        "C:/msys64/home/userName/vscode/css/md_preview.css"
    ],
    // ファイル全般
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    // エディタ
    "editor.renderWhitespace": "all",
    "editor.formatOnType": true,
    "[php]" : {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[html]" : {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    // php
    "php.validate.executablePath": "C:/php/php.exe",
    "php.executablePath": "C:/php/php.exe",
    // 拡張子の関連付け
    "files.associations": {
        "*.blade.php": "html", // bladeファイルを開いたときに右下にHTMLと表示されていればOK
        "*.twig": "html"
    },
    // gitignore対象ファイルを検索対象とするか否か、基本trueが便利だがライブラリの中除きたいときにはfalseの方が都合が良い
    "search.useIgnoreFiles": false,
    // ---------------- extension
    // fullpath in status bar
    // 開いているフォルダを基点とした相対パス / trueで絶対パス
    "ActiveFileInStatusBar.fullpath": false,
    // background-image
    "background.enabled": false
}
