{
    "workbench.colorTheme": "Peacocks In Space (rainglow)",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.enablePreview": false,
    "window.zoomLevel": -1,
    "git.path": "C:/msys64/usr/bin/git.exe",
    // ファイル全般
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    // エディタ
    "editor.renderWhitespace": "all",
    "editor.formatOnType": true,
    // エディタ ファイル別
    "[json]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": true
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": false
    },
    "[php]" : {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[sh]" : {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[html]" : {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    // php
    "php.validate.executablePath": "C:/php/php.exe",
    "php.executablePath": "C:/php/php.exe",
    // 拡張子の関連付け
    "files.associations": {
        "*.blade.php": "html", // bladeファイルを開いたときに右下にHTMLと表示されていればOK
        "*.twig": "html"
    },
    // gitignore対象ファイルを検索対象とするか否か、基本trueが便利だがライブラリの中除きたいときにはfalseの方が都合が良い
    "search.useIgnoreFiles": false,
    // ---------------- extension
    // fullpath in status bar
    // 開いているフォルダを基点とした相対パス / trueで絶対パス
    "ActiveFileInStatusBar.fullpath": false,
    // background-image
    "background.enabled": true,
    "background.useDefault": false,
    "background.customImages" : [
        "file:///C:/Users/userName/Pictures/ham1.png",
        "file:///C:/Users/userName/Pictures/ham2.png",
        "file:///C:/Users/userName/Pictures/ham3.png"
    ],
    "background.style": {
        "content": "''",
        "pointer-events": "none",
        "position": "absolute",
        "z-index": "99999",
        "width": "100%",
        "height": "100%",
        "background-position": "100% 100%",
        "background-repeat": "no-repeat",
        "background-size": "50%",
        "opacity": 0.3
    },
    "workbench.sideBar.location": "left"
}
